        "lastname": "SELECT lastname FROM {{HEROES_TABLE}}",
        "city": "SELECT city FROM {{HEROES_TABLE}}"
    },
    "tables": {
        "superheroes": [
            "id integer primary key",
            "firstname varchar",
            "lastname varchar",
            "city varchar"
        ]
    },
