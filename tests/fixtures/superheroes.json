            "tables": {
                "HEROES_TABLE": "superheroes"
            }
        },
        "test_lastname": {
            "input": "superheroes_input.csv",
            "output": "superheroes_output_lastname.csv",
            "query": "lastname",
            "table": "superheroes",
            "tables": {
                "HEROES_TABLE": "superheroes"
            }
        },
        "test_city": {
